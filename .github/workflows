name: Python Tests

on: [push] # Запускать пайплайн при каждом push в репозиторий

jobs:
  test:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.9'

      - name: Install dependencies
        run: |
          pip install pytest

      - name: Run tests with pytest
        run: |
          pytest -v
